{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ecological Interaction Schema",
  "description": "Schema for extracting ecological interaction data from scientific literature",
  "type": "object",
  "properties": {
    "reasoning": {
      "type": "string",
      "description": "Your reasoning process: analyze document structure, identify data sources, assess organism identifiability, note extraction challenges, and explain decisions before extracting records"
    },
    "records": {
      "type": "array",
      "description": "Array of ecological records",
      "items": {
        "type": "object",
        "description": "Ecological interaction between bats and other identifiable organisms",
        "required": [
          "all_supporting_source_sentences"
        ],
        "x-unique-fields": [
          "bat_species_scientific_name",
          "bat_species_common_name",
          "interacting_organism_scientific_name",
          "interacting_organism_common_name"
        ],
        "properties": {
          "organisms_identifiable": {
            "type": "string",
            "description": "Whether both bat and interacting organism can be identified by scientific name, genus, or specific common name (set to 'true' only when both are identifiable)"
          },
          "bat_species_scientific_name": {
            "type": "string",
            "description": "Scientific name of bat species"
          },
          "bat_species_common_name": {
            "type": "string",
            "description": "Common name of bat species"
          },
          "interacting_organism_scientific_name": {
            "type": "string",
            "description": "Scientific name of interacting organism"
          },
          "interacting_organism_common_name": {
            "type": "string",
            "description": "Common name of interacting organism"
          },
          "interaction_start_date": {
            "type": "string",
            "description": "Start date of interaction"
          },
          "interaction_end_date": {
            "type": "string",
            "description": "End date of interaction"
          },
          "location": {
            "type": "string",
            "description": "Geographic location of interaction"
          },
          "all_supporting_source_sentences": {
            "type": "array",
            "description": "Array where each element contains exactly ONE sentence from the source document",
            "items": {
              "type": "string",
              "description": "Individual supporting sentence"
            }
          },
          "page_number": {
            "type": "integer",
            "description": "Page number in document"
          },
          "publication_year": {
            "type": "integer",
            "description": "Year of publication"
          }
        }
      }
    }
  },
  "required": ["reasoning", "records"]
}
