{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Host-Pathogen Relationship Data Schema",
  "description": "Schema for extracted host-pathogen relationships from scientific literature for One Health PROTECT",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "records": {
      "type": "array",
      "description": "Array of host-pathogen relationship records",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "OHP_Pathogen_Name",
          "PDF_Name",
          "DOI",
          "Pathogen_Name",
          "Host_Name",
          "Detection_Method",
          "Sample_type",
          "all_supporting_source_sentences",
          "Confidence_Score",
          "Vector_Name",
          "GenBank_Accession",
          "Extraction_quality_score",
          "Supplemental_Material"
        ],
        "x-unique-fields": [
          "Pathogen_Name",
          "Host_Name"
        ],
        "properties": {
          "OHP_Pathogen_Name": {
            "type": ["string", "null"],
            "description": "Currently the name of each PDF folder - the pathogen of interest that was queried in PubMed"
          },
          "PDF_Name": {
            "type": ["string", "null"],
            "description": "PDF file name"
          },
          "DOI": {
            "type": ["string", "null"],
            "description": "DOI from PDF"
          },
          "Pathogen_Name": {
            "type": "string",
            "description": "Pathogen name extracted from PDF"
          },
          "Host_Name": {
            "type": "string",
            "description": "Host name extracted from PDF"
          },
          "Detection_Method": {
            "type": "array",
            "description": "Array of detection methods used for this host-pathogen relationship",
            "items": {
              "type": "string",
              "description": "Individual detection method (e.g., PCR, Serology, Culture, etc.)"
            }
          },
          "Sample_type": {
            "type": "array",
            "description": "Array of sample types that were tested (empty array if not mentioned)",
            "items": {
              "type": "string",
              "description": "Individual sample type"
            }
          },
          "all_supporting_source_sentences": {
            "type": "array",
            "description": "Array of verbatim sentences from the source document that support this host-pathogen-detection relationship. Each element should contain exactly ONE sentence.",
            "items": {
              "type": "string",
              "description": "Individual supporting sentence from the document"
            }
          },
          "Confidence_Score": {
            "type": ["integer", "null"],
            "description": "Model confidence score (1-5 scale)"
          },
          "Vector_Name": {
            "type": "array",
            "description": "Array of vector names from PDF (e.g., tick species). Empty array if not mentioned.",
            "items": {
              "type": "string",
              "description": "Individual vector name"
            }
          },
          "GenBank_Accession": {
            "type": "array",
            "description": "Array of GenBank Accession numbers reported in PDF. Empty array if not mentioned.",
            "items": {
              "type": "string",
              "description": "Individual GenBank accession number"
            }
          },
          "Extraction_quality_score": {
            "type": ["integer", "null"],
            "description": "Source data quality score (1-5 scale)"
          },
          "Supplemental_Material": {
            "type": ["boolean", "null"],
            "description": "Does it seem like more information might be present in the supplemental data?"
          }
        }
      }
    }
  },
  "required": ["records"]
}
